<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/tt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".condition_admin">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:textColor="#000"
        android:background="#F8A7162B"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSTRUCTIONS" />

    <TextView
        android:id="@+id/textView9"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:textColor="#000"
        android:background="#72FFEBEE"
        android:layout_marginRight="22dp"
        android:layout_height="wrap_content"
        android:text="This quiz contains multiple choice questions and answers of different subjects.You have to choose a subject of your interest and then you would be able to insert the questions for the test.Each question contains one marks on correct answer and there is no negative mark for wrong answer. Keep in your mind that the questions level must suits with the marks." />
</LinearLayout>